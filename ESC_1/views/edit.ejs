<html>
<head>
    <title>ESC Annual Membership Application</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container">
<h3 align="center">EDIT APPLICATION FORM FOR MEMBERSHIP WITH ESC</h3><br><br>
<form method="post" action="/edit1/<%= app._id %>?_method=PUT">
<div>Company <input type="text" name="app[name]" value="<%= app.Company %>" required></div><br>
<div>Date of establishment <input type="text" name="app[date]" value="<%= app.DateOfEstablish.toDateString() %>" required></div><br>
<div>Registered office address <input type="text" name="app[address]" value="<%= app.OfficeAdd %>" required></div><br>
<div>City <input type="text" name="app[city]" value="<%= app.City %>" required></div><br>
<div>Pin <input type="value" name="app[pin]" value="<%= app.Pin %>" required></div><br>
<div>State <input type="text" name="app[state]" value="<%= app.State %>" required></div><br>
<div>Telephone <input type="value" name="app[telephone]" value="<%= app.Telephone %>" required></div><br>
<div>Email <input type="email" name="app[email]" value="<%= app.Email %>" required></div><br>
<div>Website <input type="text" name="app[website]" value="<%= app.Website %>" required></div><br>
<div>CEO Name <input type="text" name="app[ceon]" value="<%= app.CEOName %>" required></div><br>
<div>Email <input type="email" name="app[email1]" value="<%= app.Email1 %>"required></div><br>
<div>Phone/Mobile <input type="value" name="app[phone]" value="<%= app.Phone %>" required></div><br>
<div>IEC Number <input type="text" name="app[iec]" value="<%= app.IECNumber %>" required></div><br>
